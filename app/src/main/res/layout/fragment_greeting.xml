<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/outter_layout_padding"
        android:layout_height="match_parent"
        android:theme="@style/ThemeOverlay.AnteiaSDK.FullscreenContainer"

        android:background="@drawable/gradient_background"
        tools:context=".ui.aidetection.GreetingFragment">
        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/next"
            android:textColor="@color/button_text_color"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttons_height"
            android:paddingLeft="@dimen/buttons_padding"
            android:paddingRight="@dimen/buttons_padding"
            android:id="@+id/next_button"
            android:background="@drawable/button_background" />


        <TextView
            android:id="@+id/greeting_message_tv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:text="@string/greeting_message" />


    </RelativeLayout>

</layout>
