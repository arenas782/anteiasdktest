<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="@dimen/outter_layout_padding"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".ui.aidetection.IntroFragment">

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/next"
            android:textColor="@color/button_text_color"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttons_height"
            android:paddingLeft="@dimen/buttons_padding"
            android:paddingRight="@dimen/buttons_padding"
            android:id="@+id/next_button"
            android:background="@drawable/button_background" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@id/intro_message_tv"
            android:layout_centerHorizontal="true"
            android:src="@drawable/id_card"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/intro_message_tv"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="@string/have_your_id_card_at_hand"

            android:textSize="24sp"
            android:textStyle="bold" />



    </RelativeLayout>
</layout>
